{
    "include": ["src/**/*"],
    "compilerOptions": {
        "module": "NodeNext",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": false
    },
    "exclude": [
       "node_modules"
    ]
}